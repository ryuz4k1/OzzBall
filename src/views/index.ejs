                    <span class="name">Mehmet</span>
                    <div class="message">Selam</div>
                </div>
            </div>
            <div class="circle green" style="left:300px; top:100px">
                <div class="relative">
                    <span class="name">Alp</span>
                    <div class="message">selam nas覺ls覺n :)</div>
                </div>
            </div>
            <div class="circle red" style="left:350px; top:300px">
                <div class="relative">
                    <span class="name">Joe</span>
                    <div class="message">this is awesome</div>
                </div>
            </div>
        </div>

        <div class="ui items chat">
            <div class="item">
                <div class="content">
                    <a class="header name">Mehmet</a>
                    <div class="description message">
                        Selam
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="content">
                    <a class="header name">Alp</a>
                    <div class="description message">
                        selam nas覺ls覺n :)
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="content">
                    <a class="header name">Joe</a>
                    <div class="description message">
                        this is awesome
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="content">
                    <a class="header name">Sinang</a>
                    <div class="description message">
                        hey
                    </div>
                </div>
            </div>
        </div>

        <div class="ui action input fluid">
            <input type="text" placeholder="Type here...">
            <button class="ui button">Send</button>
        </div>
    </div>
</div>

</body>
</html>


<!--AngularJs from Bower-->
<script src="../../bower_components/angular/angular.min.js"></script>

<!--MainJs from public/js-->
<script src="../../public/javascripts/main.js"></script>

<!--Socketio-->
<script src="/socket.io/socket.io.js"></script>

<!--Client side indexController-->
<script src="../../public/javascripts/controllers/indexController.js"></script>

